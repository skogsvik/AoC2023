    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File (Module)",
            "type": "python",
            "request": "launch",
            "module": "src.python.${fileBasenameNoExtension}",
            "justMyCode": true
        },
        {
            "name": "Pytest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": ["-v", "--ff"],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Pytest: Current File",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": ["-v", "${file}"],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}